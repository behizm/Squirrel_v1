@using System.Collections.Generic
@using System.Linq
@using Squirrel.Domain.Enititis
@using Squirrel.Web.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "وبلاگ شخصی";
    List<Topic> topTopics = ViewBag.TopTopics;
}

@if (topTopics != null && topTopics.Count >= 3)
{
    <div class="col-md-12 hidden-sm hidden-xs">
        <div class="divider-blank50"></div>
    </div>

    <div class="col-md-12 hidden-sm hidden-xs">
        <div class="row top-topics">
            @Html.Partial("Index_TopTopics", topTopics)
        </div>
    </div>
}

<div class="col-md-12">
    <div class="divider-blank50"></div>
</div>

<div class="col-md-8" id="t_page">
    <div class="home-lasttopics" id="home_lasttopics_con">
        @Html.Partial("Index_TopicItems", CachedAppData.LastPublishedTopics.Items.Skip(0).Take(5).ToList())
    </div>
</div>

<div class="col-md-4 hidden-sm hidden-xs">
    <div class="sidebar">
        @Html.Partial("~/Views/Shared/Sidebar/Sidebar-Home.cshtml")
    </div>
</div>

<div class="col-md-12">
    <div class="divider-blank30"></div>
</div>
