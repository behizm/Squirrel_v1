@using Squirrel.Utility.FarsiTools
@model List<Squirrel.Domain.Enititis.Topic>

<div id="3col_items" class="hidden-sm hidden-xs">
    <div class="col-md-4">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i % 3 == 0)
            {
                <div class="flatbox-shadow item-box">
                    @Html.Partial("_Issues_Item", Model[i])
                </div>
            }
        }
    </div>

    <div class="col-md-4">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i % 3 == 1)
            {
                <div class="flatbox-shadow item-box">
                    @Html.Partial("_Issues_Item", Model[i])
                </div>
            }
        }
    </div>

    <div class="col-md-4">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i % 3 == 2)
            {
                <div class="flatbox-shadow item-box">
                    @Html.Partial("_Issues_Item", Model[i])
                </div>
            }
        }
    </div>
</div>

