@model Squirrel.Domain.ViewModels.CategoryAvatarModel

@using (Ajax.BeginForm("Avatar", "Categories", null, 
    new AjaxOptions { OnFailure = "onAvatarCategoryError", OnSuccess = "onAvatarCategorySuccess" }, 
    new { id = "cat_avatar_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.FileId, new { id = "category_avatar_id" })
    @Html.ValidationMessageFor(m => m.FileId)
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#cat_avatar_form");
        $("#cat_avatar_form").data("validator").settings.ignore = "";
    })
</script>