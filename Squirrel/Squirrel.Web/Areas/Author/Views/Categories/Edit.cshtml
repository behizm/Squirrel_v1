@model Squirrel.Domain.ViewModels.CategoryEditModel

<h4>ویرایش گروه</h4>

@Html.Partial("_Message")

@using (Ajax.BeginForm("Edit", "Categories", null, new AjaxOptions { UpdateTargetId = "option_con_2" }, new { id = "cat_details_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p class="form-group">
        @Html.LabelFor(m => m.Name)
        <br />
        @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Parent)
        <br />
        @Html.TextBoxFor(m => m.Parent, new { id = "parent_edit" })
        @Html.ValidationMessageFor(m => m.Parent)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Description)
        <br />
        @Html.TextAreaFor(m => m.Description)
        @Html.ValidationMessageFor(m => m.Description)
    </p>

    <p>
        <button type="submit" class="btn btn-default">ویرایش</button>
        <button type="button" class="btn btn-default" onclick="$('#option_con_2').html('');">انصراف</button>
    </p>
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#cat_details_form");

        $("#parent_edit").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "@Url.Action("NameJson", "Categories")",
                    dataType: "json",
                    data: { id: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.Name,
                                ID: item.Id
                            };
                        }));
                    },
                    error: function () { alert('خطا'); }
                });
            },
            minLength: 2,
        });
    })
</script>