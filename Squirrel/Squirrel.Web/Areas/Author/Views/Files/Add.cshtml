@using Squirrel.Utility.Helpers
@model Squirrel.Domain.ViewModels.FileAddModel

@Html.Partial("_Message")

<div id="upload_file_con">
    @Html.Partial("Upload")
</div>


@using (Ajax.BeginForm("Add", "Files", null, new AjaxOptions { UpdateTargetId = "option_con_1" }, new { id = "file_ops_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.FileAddress)
    <p class="form-group">
        @Html.ValidationMessageFor(m => m.FileAddress)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Name)
        <br />
        @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Category)
        <br />
        @Html.TextBoxFor(m => m.Category, new {id = "category_add"})
        @Html.ValidationMessageFor(m => m.Category)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.IsPublic)
        <br />
        @Html.DropDownListFor(m => m.IsPublic, SelectListExtensions.SelectListOfBool("عمومی", "اختصاصی"))
        @Html.ValidationMessageFor(m => m.IsPublic)
    </p>

    <p>
        <button type="submit" class="btn btn-default">افزودن</button>
    </p>
}

<script type="text/javascript">
    $(function() {
        $.validator.unobtrusive.parse("#file_ops_form");
        $("#file_ops_form").data("validator").settings.ignore = "";

        $('#FileAddress').bind('change', function () {
            $(this).valid();
        });

        $("#category_add").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "@Url.Action("CategoryJson", "Files")",
                    dataType: "json",
                    data: { id: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.Name,
                            };
                        }));
                    },
                });
            },
            minLength: 2,
        });
    });
</script>