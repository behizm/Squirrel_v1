@model Squirrel.Domain.ViewModels.ProfileAvatarModel

@using (Ajax.BeginForm("Avatar", "Profile", null,
    new AjaxOptions { OnFailure = "onAvatarProfileError", OnSuccess = "onAvatarProfileSuccess" },
    new { id = "profile_avatar_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AvatarId)
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#profile_avatar_form");
        $("#profile_avatar_form").data("validator").settings.ignore = "";
    })
</script>