@using Squirrel.Utility.FarsiTools
@model List<Squirrel.Domain.Enititis.Comment>

<div class="box-uptitle">
    <div class="text">آخرین نظرات</div>
    <div class="links">
        <a class="button small tile" href="@Url.Action("Index", "Comments")">
            <span class="glyphbox">&#xe632</span>
        </a>
    </div>
    <div class="clearbox"></div>
</div>
<div class="flatbox">
    @for (var i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        <div class="detailsrow">
            <span class="topic" style="font-size: .8em; margin-left: 10px;">
                @item.CreateDate.ToPersianDate().ToStringDateTime().FaDigit()
            </span>
            @Html.DisplayFor(m => item.Body)
        </div>

        if (i < Model.Count - 1)
        {
            <div class="divider-blank30"></div>
            <div class="full-line"></div>
            <div class="divider-blank30"></div>
        }
    }
</div>
