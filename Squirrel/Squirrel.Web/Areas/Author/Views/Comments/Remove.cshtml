@model Squirrel.Domain.ViewModels.CommentRemoveModel
@{
    var formId = "remove_comment_form_" + Model.Id;
}

<div class="removecomments-messagebox" style="background-color: #f5f5dc; text-align: center;"></div>

@using (Ajax.BeginForm("Remove", "Comments", null, new AjaxOptions { OnSuccess = "onRemoveCommentSuccess" }, new { id = formId }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p>
        این نظر حذف شود؟
    </p>
    <p>
        <button type="button" class="btn btn-default" onclick="cancelOptionComment('@Model.Id')">انصراف</button>
        <button type="submit" class="btn btn-default">حذف</button>
    </p>
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse('#' + '@formId');
    });
</script>