@model Squirrel.Domain.ViewModels.CategoryReplaceModel

<h4>جایگزینی گروه</h4>

@Html.Partial("_Message")

@using (Ajax.BeginForm("Replace", "Categories", null, new AjaxOptions { UpdateTargetId = "option_con_2" }, new { id = "cat_details_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p class="form-group">
        @Html.LabelFor(m => m.ReplaceName)
        <br />
        @Html.TextBoxFor(m => m.ReplaceName, new { id = "name_replace" })
        @Html.ValidationMessageFor(m => m.ReplaceName)
    </p>

    <p>
        <button type="submit" class="btn btn-default">انجام</button>
        <button type="button" class="btn btn-default" onclick="$('#option_con_2').html('');">انصراف</button>
    </p>
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#cat_details_form");

        $("#name_replace").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "@Url.Action("NameJson", "Categories", new { area = "Author" })",
                    dataType: "json",
                    data: { id: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.Name,
                                ID: item.Id
                            };
                        }));
                    },
                    error: function () { alert('خطا'); }
                });
            },
            minLength: 2,
        });
    })
</script>