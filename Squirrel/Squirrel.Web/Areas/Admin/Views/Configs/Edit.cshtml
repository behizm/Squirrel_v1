@model Squirrel.Domain.ViewModels.ConfigEditModel

<h4>ویرایش تنظیم</h4>

@Html.Partial("_Message")

@using (Ajax.BeginForm("Edit", "Configs", null, new AjaxOptions { UpdateTargetId = "option_con_2" }, new { id = "config_details_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p class="form-group">
        @Html.LabelFor(m => m.Key)
        <br />
        @Html.TextBoxFor(m => m.Key, new { @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.Key)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Value)
        <br />
        @Html.TextBoxFor(m => m.Value)
        @Html.ValidationMessageFor(m => m.Value)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Description)
        <br />
        @Html.TextAreaFor(m => m.Description)
        @Html.ValidationMessageFor(m => m.Description)
    </p>

    <p>
        <button type="submit" class="btn btn-default">ویرایش</button>
        <button type="button" class="btn btn-default" onclick="$('#option_con_2').html('');">انصراف</button>
    </p>
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#config_details_form");
    })
</script>