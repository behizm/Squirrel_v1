@model Squirrel.Domain.ViewModels.UserUpdateModel
    
<h4>ویرایش کاربر</h4>

@Html.Partial("_Message")

@using (Ajax.BeginForm("Edit", "Users", null, new AjaxOptions { UpdateTargetId = "option_con_2" }, new { id = "user_details_form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p class="form-group">
        @Html.LabelFor(m => m.Username)
        <br />
        @Html.TextBoxFor(m => m.Username)
        @Html.ValidationMessageFor(m => m.Username)
    </p>

    <p class="form-group">
        @Html.LabelFor(m => m.Email)
        <br />
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </p>

    <p>
        <button type="submit" class="btn btn-default">ویرایش</button>
        <button type="button" class="btn btn-default" onclick="$('#option_con_2').html('');">انصراف</button>
    </p>
}

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#user_details_form");
    })
</script>