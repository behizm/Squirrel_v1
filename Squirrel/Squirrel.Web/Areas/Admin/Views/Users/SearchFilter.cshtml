@model Squirrel.Domain.ViewModels.UserSearchModel

@using (Ajax.BeginForm("Search", "Users", null, new AjaxOptions { UpdateTargetId = "list_result" }, new { id = "user_search_from" }))
{
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.Hidden("searchPage", 1)
        @Html.TextBoxFor(m => m.Username, new { placeholder = "نام کاربری" })
        @Html.TextBoxFor(m => m.Email, new { placeholder = "پست الکترونیکی" })
        <button type="submit" class="btn btn-default">جستجو</button>
    </div>

}